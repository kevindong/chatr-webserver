doctype html
head
	title Update Module
	include ../../templates/head
	style
		include style.css
		include panel.css
body
	include ../../templates/Header:Footer/header.pug
	.panel.panel-default
		.panel-heading
			h1 Update Module
		.panel-body
			form(id="update-module", method="POST", enctype="multipart/form-data", action=serverUrl)
				label Module You Want To Update
				br
				for module in modules
					input(type="radio" id=module, name=module)
					span=module
					br
				br
				// TODO: Make all fields editable
				.input-group
					span.input-group-addon
						label(for="code") File(s)
					input.form-control(type="file", name="code", id="code", multiple)
				br
				button.btn.btn-primary(type="submit") Submit
	include ../../templates/Header:Footer/footer.pug